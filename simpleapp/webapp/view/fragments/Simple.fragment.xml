<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="idDialog"
        title="Simple dialog"
        class="sapUiPopupWithPadding"
        resizable="true">
        <content>
            <Text id="idText" text="Sample text" />
        </content>
        <endButton>
            <Button id="idButton" text="Close" press="onClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>