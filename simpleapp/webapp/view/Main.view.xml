<mvc:View
    controllerName="simpleapp.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <Button id="button" text="PressButton" press="onButtonPressed" />
                        <List id="idListThemes"
	                	    headerText="Themes"
		                    items="{
                                path: 'localModel>/data',
                                sorter: { 
                                    path: 'author' }
                                    }"
                            mode="SingleSelectMaster"
                            selectionChange="onSelectionChange">
                            <items>
                                <StandardListItem 
                                    id="idStandardListItem"
                                    title="{localModel>title}"
                                    description="{ parts: [
                                        { path: 'localModel>description' },
                                        { path: 'localModel>author' }
                                        ]}" 
                                    info="{localModel>status}" />
                            </items>
		                </List>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
